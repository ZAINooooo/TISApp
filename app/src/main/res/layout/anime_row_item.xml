<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="10dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/thumbnail"
            android:layout_width="@dimen/thumbnail"
            android:layout_height="@dimen/thumbnail"
            android:layout_marginRight="@dimen/activity_padding_horizontal"
            app:srcCompat="@mipmap/image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/emp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/thumbnail"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:text="zain kalim"
            android:textColor="@color/item_name"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/ed_employee_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emp_name"
            android:layout_marginTop="5dp"
            android:text="0747"
            android:layout_toRightOf="@id/thumbnail"
            android:textColor="@color/description"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/attendance_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ed_employee_number"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="0747yyyyyyyy"
            android:layout_toRightOf="@id/thumbnail"
            android:textColor="@color/description"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_marginBottom="20dp"
            android:text="Remarks"
            android:layout_toRightOf="@id/thumbnail"
            android:layout_below="@id/attendance_date"
            android:textColor="@color/colorAccent2"
            android:textStyle="bold" />


        <Button
            android:id="@+id/manual_enter"
            android:layout_width="200dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/remarks"
            android:layout_toRightOf="@id/thumbnail"
            android:fontFamily="serif"
            android:background="@drawable/rounded_button"
            android:text="Manual Entry "
            android:textColor="#FFFFFF"
            android:textSize="20sp" />


    </RelativeLayout>

</FrameLayout>

