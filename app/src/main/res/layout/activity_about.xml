<?xml version="1.0" encoding="utf-8"?>
<LinearLayout n1:orientation="vertical" n1:id="@+id/about" n1:layout_width="fill_parent" n1:layout_height="fill_parent"
  xmlns:n1="http://schemas.android.com/apk/res/android">
    <!--<include layout="@layout/layout_tabs" />-->
    <ScrollView n1:layout_width="fill_parent" n1:layout_height="fill_parent" n1:fillViewport="true">
        <LinearLayout n1:gravity="center_horizontal" n1:orientation="vertical" n1:padding="20.0dip" n1:layout_width="fill_parent" n1:layout_height="fill_parent">
            <ImageView n1:layout_width="wrap_content" n1:layout_height="100dp" n1:src="@mipmap/time" />
            <TextView n1:id="@+id/tvAbout" n1:layout_width="fill_parent" n1:layout_height="wrap_content"
                n1:layout_marginTop="20.0dip"
                n1:layout_marginBottom="20.0dip"

                n1:shadowColor="#000000"
                n1:shadowDx="1"
                n1:shadowDy="1"
                n1:shadowRadius="2"
                n1:typeface="serif"
                n1:textAlignment="textStart"
                n1:textStyle="bold"

                n1:text=" TIS Android is a comprehensive and scalable solution and it can be connected whenever and wherever required and can be molded
into the requirements wharever , It is compatible with MW , TIS. .NET and TIS WEB BASED version."
                n1:lineSpacingExtra="5.0dip" />


            <Button
                n1:id="@+id/btnabout"
                style="?android:borderlessButtonStyle"
                n1:layout_width="match_parent"
                n1:layout_height="wrap_content"
                n1:layout_alignParentRight="true"
                n1:background="@drawable/button_selector_gradient_main"
                n1:fontFamily="@font/montserrat_regular"
                n1:text="OK"
                n1:textAppearance="?android:textAppearanceSmall"
                n1:textColor="#ffffffff"
                n1:textStyle="normal" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>