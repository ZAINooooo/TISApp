<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="10dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/thumbnail"
            android:layout_width="@dimen/thumbnail"
            android:layout_height="@dimen/thumbnail"
            android:layout_marginRight="@dimen/activity_padding_horizontal"
            app:srcCompat="@mipmap/image"
            android:scaleType="centerCrop" />



        <TextView
            android:id="@+id/offline_data_list_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/thumbnail"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:text="From Date :- "
            android:textColor="@color/item_name"
            android:textSize="17dp" />


        <TextView
            android:id="@+id/offline_data_list_item_date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/offline_data_list_item_date"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:text="20th may 2019"
            android:textColor="@color/item_name"
            android:textSize="17dp" />







        <TextView
            android:id="@+id/offline_data_list_item_date3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/thumbnail"
            android:layout_below="@id/offline_data_list_item_date2"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:text="To Date :- "
            android:textColor="@color/item_name"
            android:textSize="17dp" />


        <TextView
            android:id="@+id/offline_data_list_item_date4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/offline_data_list_item_date3"
            android:ellipsize="end"
            android:layout_below="@id/offline_data_list_item_date2"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:text="20th may 2019"
            android:textColor="@color/item_name"
            android:textSize="17dp" />













        <TextView
            android:id="@+id/offline_data_list_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/offline_data_list_item_date3"
            android:layout_marginTop="5dp"
            android:text="Leave Code :-"
            android:textStyle="bold"
            android:layout_toRightOf="@id/thumbnail"
            android:textColor="@color/colorAccent2"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/offline_data_list_item_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="  0747"
            android:textStyle="bold"
            android:layout_below="@id/offline_data_list_item_date4"
            android:layout_toRightOf="@id/offline_data_list_item_type"
            android:textColor="@color/colorAccent2"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/offline_data_list_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/offline_data_list_item_type"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Sync Status :- "
            android:textStyle="bold"
            android:layout_toRightOf="@id/thumbnail"
            android:textColor="@color/description"
            android:textSize="12dp" />



        <TextView
            android:id="@+id/offline_data_list_item_status2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/offline_data_list_item_type"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="No"
            android:layout_toRightOf="@id/offline_data_list_item_status"
            android:textColor="@color/followers"
            android:textSize="12dp" />








        <TextView
            android:id="@+id/offline_data_list_item_status33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/offline_data_list_item_status"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Remarks :- "
            android:textStyle="bold"
            android:layout_toRightOf="@id/thumbnail"
            android:textColor="@color/darkblue"
            android:textSize="12dp" />



        <TextView
            android:id="@+id/offline_data_list_item_status3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/offline_data_list_item_status2"
            android:layout_marginBottom="10dp"
            android:text=" No"
            android:layout_toRightOf="@id/offline_data_list_item_status33"
            android:textColor="@color/followers"
            android:textSize="12dp" />









        <TextView
            android:id="@+id/offline_data_list_item_status34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/offline_data_list_item_status3"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Response:- "
            android:textStyle="bold"
            android:layout_toRightOf="@id/thumbnail"
            android:textColor="@color/darkblue"
            android:textSize="12dp" />



        <TextView
            android:id="@+id/offline_data_list_item_status39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/offline_data_list_item_status3"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:text=" Will be Added Soon"
            android:layout_toRightOf="@id/offline_data_list_item_status34"
            android:textColor="@color/followers"
            android:textSize="12dp" />







        <Button
            android:id="@+id/delete_entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/offline_data_list_item_status34"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/thumbnail"
            android:background="@drawable/button_selector_gradient_main"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:padding="14dp"
            android:text="Delete Entry "
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="14dp" />



        <!--<TextView-->
            <!--android:id="@+id/offline_data_list_item_status"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginBottom="20dp"-->
            <!--android:text="Status"-->
            <!--android:layout_toRightOf="@id/thumbnail"-->
            <!--android:textColor="@color/colorAccent2"-->
            <!--android:textStyle="bold" />-->


        <!--<Button-->
            <!--android:id="@+id/manual_enter"-->
            <!--android:layout_width="200dp"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/remarks"-->
            <!--android:layout_toRightOf="@id/thumbnail"-->
            <!--android:fontFamily="serif"-->
            <!--android:background="@drawable/rounded_button"-->
            <!--android:text="Manual Entry "-->
            <!--android:textColor="#FFFFFF"-->
            <!--android:textSize="20sp" />-->


    </RelativeLayout>

</FrameLayout>






