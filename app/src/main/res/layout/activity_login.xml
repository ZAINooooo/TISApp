        <com.dd.ShadowLayout
            android:id="@+id/buttonSubmit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:sl_cornerRadius="50dp"
            app:sl_dx="5dp"
            app:sl_dy="5dp"
            app:sl_shadowColor="#ff919191"
            app:sl_shadowRadius="4.0dip">


            <Button
                android:textSize="14dp"
                android:textColor="#FFFFFF"
                android:id="@+id/singupbtn"
                android:background="@drawable/button_selector_gradient_main"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:text="Sign In"
                android:textAllCaps="true"
                android:fontFamily="@font/montserrat_regular" />
        </com.dd.ShadowLayout>


    </LinearLayout>




    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/a"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.55"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp">

        <TextView
            android:textSize="15dp"
            android:textColor="#66000000"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/sign_in_to_witty_manager"
            android:alpha="0.9"
            android:fontFamily="@font/montserrat_light" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilOrganization"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <EditText
                android:textSize="14dp"
                android:gravity="center_horizontal"
                android:id="@+id/editOrganization"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/org_name"
                android:inputType="text"
                android:fontFamily="@font/montserrat_light" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>


    <LinearLayout
